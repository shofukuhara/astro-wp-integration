---
import Base from "../../layouts/Base.astro";
import AssetsImage from "../../components/common/AssetsImage.astro";
import AssetsPicture from "../../components/common/AssetsPicture.astro";
import Button from "../../components/ui/Button.astro";
import Picture from "../../components/common/Picture.astro";
const imgBase = import.meta.env.BASE_URL + "assets/images/";
---

<Base pageMeta="about" pageData="about">
  <!-- body内の要素 -->
  <Button href="/about" className="c-button--primary" text="Aboutページへ" />
  <Picture
    srcPc="common/item_pc"
    srcSp="common/item_sp"
    alt="説明テキスト"
    loading="lazy"
    classNames="custom-class item"
    pictureAttributes={{ "data-picture": "" }}
    imgAttributes={{ "data-img": "" }}
  />
</Base>

<style lang="scss" is:global>
  body {
    background-color: #000000;
    color: #333;
    width: var(--width);
    .custom-class {
      width: 300px;
      height: 300px;
    }
  }
</style>
